<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.membership.domain.log.mybatis.MembershipLogMapper">

    <insert id="insert" parameterType="org.example.membership.domain.log.MembershipLog">
        INSERT INTO membership_log (
            user_id,
            previous_level,
            new_level,
            change_reason,
            changed_at
        ) VALUES (
                     #{user.id},
                     #{previousLevel},
                     #{newLevel},
                     #{changeReason},
                     #{changedAt}
                 )
    </insert>

</mapper>